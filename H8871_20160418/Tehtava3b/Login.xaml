<Window x:Class="Tehtava3b.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tehtava3b"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock>Käyttäjänimi:</TextBlock>
            <TextBox x:Name="txtUsername" TextChanged="txtUsername_TextChanged"></TextBox>
            <TextBlock Margin="0,10,0,0">Salasana</TextBlock>
            <PasswordBox x:Name="pwbPassword" PasswordChanged="pswPassword_PasswordChanged"></PasswordBox>
            <Button x:Name="btnSubmit" HorizontalAlignment="Center" Margin="0,20,0,0" Padding="5" IsEnabled="False" Click="btnSubmit_Click">Kirjaudu</Button>
        </StackPanel>
    </Grid>
</Window>
